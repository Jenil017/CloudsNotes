  <script>
    function toggle(el){
      el.classList.toggle('open');
    }
    function expandAll(){
      document.querySelectorAll('.qa').forEach(q => q.classList.add('open'));
      window.scrollTo({top:0,behavior:'smooth'});
    }
    function collapseAll(){
      document.querySelectorAll('.qa').forEach(q => q.classList.remove('open'));
      window.scrollTo({top:0,behavior:'smooth'});
    }

    // keyboard shortcuts: E to expand all, C to collapse all
    document.addEventListener('keydown', (e)=>{
      if(e.key.toLowerCase()==='e') expandAll();
      if(e.key.toLowerCase()==='c') collapseAll();
    });
  </script>
</body>
